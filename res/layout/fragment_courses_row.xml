<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp" >

        <LinearLayout
            android:id="@+id/timetable_courses_layout"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/timetable_course_code"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="@string/hello_world"
                android:textColor="@color/deaf_text"
                android:textSize="18.0dip"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/timetable_course_place"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="@string/hello_world"
                android:textSize="25.0dip"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/timetable_courses_layout"
            android:layout_toRightOf="@+id/timetable_courses_layout"
            android:orientation="vertical"
            android:paddingBottom="40dp" >

            <TextView
                android:id="@+id/timetable_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/hello_world"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/timetable_course_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/hello_world"
                android:textSize="12sp"
                android:textStyle="italic"
                android:typeface="monospace" />
        </LinearLayout>

        <TextView
            android:id="@+id/timetable_course_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/timetable_course_teacher"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="5.0dip"
            android:text="@string/hello_world"
            android:textColor="#f3000000"
            android:textSize="10.0dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timetable_course_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#555555"
            android:padding="5.0dip"
            android:text="@string/hello_world"
            android:textColor="#ffffff"
            android:textSize="12.0dip"
            android:textStyle="bold" />
    </RelativeLayout>

</android.support.v7.widget.CardView>